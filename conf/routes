# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET		/search/:keyword			controllers.HomeController.getTweetsBySearch(keyword:String)

#Retrieving word level statistics for inputed search term
GET		/statistics/:keyword			controllers.HomeController.getStatisticsForSearchTerm(keyword:String)

# Fetch the User information
GET     /getUserTimeline/:userId            controllers.HomeController.getUserTimeline(userId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
