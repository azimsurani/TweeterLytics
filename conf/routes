# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#Returns 10 latest tweets for entered search term
GET		/search/:keyword			controllers.HomeController.getTweetsBySearch(keyword:String)

#Retrieves word level statistics for entered search term
GET		/statistics/:keyword			controllers.HomeController.getStatisticsForSearchTerm(keyword:String)

#Retrieves the User information
GET     /getUserTimeline/:userId           controllers.HomeController.getUserTimeline(userId: String)

#Returns the tweets by corresponding hashtag
GET     /searchbyhashtag/:hashtag            controllers.HomeController.getTweetByHashtag(hashtag: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
